[Unit]
Description=beacon-chain Service
After=network.target

[Service]
Type=simple
User=ubuntu
ExecStart=/bin/bash -c '/home/ubuntu/prysm/prysm.sh beacon-chain --p2p-host-ip=$(curl -s ident.me) --http-web3provider=https://goerli.infura.io/v3/96c474d6d608419ebcad7c01e96ee63b --datadir=/data/eth2 --disable-initial-sync-verify-all-signatures'
Restart=always

[Install]
WantedBy=multi-user.target
